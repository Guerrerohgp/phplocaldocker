# ===========================================
# Project Configuration
# ===========================================
PROJECT_NAME=myapp
PROJECT_DOMAIN=myapp.test

# ===========================================
# PHP Configuration
# ===========================================
# Available versions: 7.4, 8.0, 8.1, 8.2, 8.3
PHP_VERSION=8.2

# ===========================================
# Node.js Configuration
# ===========================================
NODE_VERSION=20

# ===========================================
# User/Group IDs (for file permissions)
# ===========================================
# macOS/Linux: typically 1000 (run `id -u` to check)
# Windows: can usually leave as default
WWWUSER=1000
WWWGROUP=1000

# ===========================================
# Application Port
# ===========================================
APP_PORT=80
HMR_PORT=8080

# ===========================================
# Database Configuration
# ===========================================
# MySQL
MYSQL_VERSION=8.0
DB_DATABASE=myapp
DB_USERNAME=myapp
DB_PASSWORD=secret
DB_ROOT_PASSWORD=root
FORWARD_DB_PORT=3306

# PostgreSQL
POSTGRES_VERSION=16
POSTGRES_DB=myapp
POSTGRES_USER=myapp
POSTGRES_PASSWORD=secret
FORWARD_POSTGRES_PORT=5432

# ===========================================
# Redis Configuration
# ===========================================
REDIS_ENABLED=true
FORWARD_REDIS_PORT=6379

# ===========================================
# Mailpit Configuration (Email Testing)
# ===========================================
MAILPIT_ENABLED=true
MAILPIT_HOST=mailpit
MAILPIT_PORT=1025
MAILPIT_FROM_EMAIL=noreply@myapp.test
MAILPIT_FROM_NAME=MyApp
FORWARD_MAILPIT_PORT=1025
FORWARD_MAILPIT_DASHBOARD_PORT=8025

# ===========================================
# SSL Configuration
# ===========================================
SSL_ENABLED=true

# ===========================================
# Xdebug Configuration
# ===========================================
SAIL_XDEBUG_MODE=off
SAIL_XDEBUG_CONFIG=client_host=host.docker.internal

# ===========================================
# Platform Notes
# ===========================================
# macOS:
#   - Docker Desktop required
#   - Run: ./sail build && ./sail up
#   - SSL: ./sail ssl (then follow prompts)
#
# Linux:
#   - Docker 20.10+ required for host.docker.internal
#   - Run: ./sail build && ./sail up
#   - May need to run with sudo or add user to docker group
#
# Windows:
#   - Docker Desktop required with WSL2 backend
#   - Run: sail.bat build && sail.bat up
#   - Or use WSL/PowerShell: ./sail build && ./sail up
#   - SSL: sail.bat ssl
